---
import "../styles/global.css";
const { title = "my14ers" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-zinc-950 text-zinc-100">
    <div class="pointer-events-none fixed inset-0 -z-10">
      <div class="bg-drift absolute inset-0 app-bg-radial"></div>
      <div class="absolute inset-0 opacity-[0.08] app-bg-grid"></div>
      <div class="absolute inset-0 bg-gradient-to-b from-transparent via-zinc-950/20 to-zinc-950"></div>
    </div>

    <slot />
  </body>
</html>