---
import "../styles/global.css";
const { title = "my14ers" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <title>{title}</title>
    <meta name="description" content="Track Colorado 14ers, toggle climbs, and export a glossy checklist snapshot to share your progress." />
    <meta property="og:title" content="my14ers — Colorado 14ers tracker" />
    <meta property="og:description" content="Track Colorado 14ers, toggle climbs, and export a glossy checklist snapshot to share your progress." />
    <meta property="og:image" content="https://yuzhang-io.github.io/my14ers/og.png" />
    <meta property="og:url" content="https://yuzhang-io.github.io/my14ers/" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="my14ers — Colorado 14ers tracker" />
    <meta name="twitter:description" content="Track your Colorado 14ers, export a neon snapshot, and share your progress with friends." />
    <meta name="twitter:image" content="/my14ers_socialimg.png" />
  </head>
  <body class="min-h-screen bg-zinc-950 text-zinc-100">
    <div class="pointer-events-none fixed inset-0 -z-10">
      <div class="bg-drift absolute inset-0 app-bg-radial"></div>
      <div class="absolute inset-0 opacity-[0.08] app-bg-grid"></div>
      <div class="absolute inset-0 bg-gradient-to-b from-transparent via-zinc-950/20 to-zinc-950"></div>
    </div>

    <slot />
  </body>
</html>