---
import BaseLayout from "../layouts/BaseLayout.astro";
import FourteenerMap from "../components/FourteenerMap.astro";
---

<BaseLayout title="my14ers">
  <main class="mx-auto max-w-6xl px-6 py-10">
    <header class="flex items-end justify-between gap-4">
      <div>
        <h1 class="text-4xl font-semibold tracking-tight">
          <span class="bg-gradient-to-r from-fuchsia-400 via-violet-300 to-cyan-300 bg-clip-text text-transparent">
            my14ers
          </span>
        </h1>
        <p class="mt-2 text-sm text-zinc-400">
          Mark climbs → generate a futuristic shareable snapshot.
        </p>
      </div>

      <a
        href="/snapshot"
        class="rounded-2xl border border-white/10 bg-white/5 px-4 py-2 text-sm text-zinc-100 backdrop-blur hover:bg-white/10 hover:border-white/20"
      >
        Open snapshot →
      </a>
    </header>

    <div class="mt-6">
      <FourteenerMap />
    </div>

    <footer class="mt-10 text-xs text-zinc-500">
      Data stays in your browser (localStorage). Export a JSON to save/share.
    </footer>
  </main>
</BaseLayout>